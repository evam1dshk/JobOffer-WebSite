@model X.PagedList.IPagedList<JobListingSite.Data.Entities.Offer>
@using JobListingSite.Data.Enums
@using X.PagedList

<h2>Manage Job Offers</h2>
<a asp-action="CreateJob" class="btn btn-primary mb-3">Add Job</a>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}


@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
@if (TempData["WarningMessage"] != null)
{
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
        @TempData["WarningMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="mb-4">
    <h5>Job Statistics</h5>
    <ul class="list-group list-group-horizontal flex-wrap">
        <li class="list-group-item">Total Jobs: <strong>@Model.TotalItemCount</strong></li>
        <li class="list-group-item">Pending Applications: <strong>@ViewBag.PendingApplicationsCount</strong></li>
        <li class="list-group-item">Total Applications: <strong>@ViewBag.TotalApplicationsCount</strong></li>
    </ul>
</div>


<form method="get" asp-action="ManageJobs" class="mb-3 d-flex">
    <input type="text" name="search" class="form-control me-2" placeholder="Search job offers..."
           value="@ViewBag.SearchQuery" />
    <button type="submit" class="btn btn-primary">Search</button>
    <a href="@Url.Action("ManageJobs")" class="btn btn-secondary ms-2">Clear</a>
</form>


<!-- Table displaying job offers -->
<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Category</th>
            <th>Actions</th>
            <th>Applications</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var job in Model)
        {
            <tr>
                <td>@job.Title</td>
                <td>@job.Category?.Name</td>
                <td>
                    <span class="badge bg-primary">@job.JobApplications.Count()</span>
                    <span class="badge bg-warning text-dark">
                        Pending: @job.JobApplications.Count(a => a.Status == ApplicationStatus.Pending)
                    </span>
                </td>
                <td>
                    <a asp-action="EditJob" asp-route-id="@job.OfferId" class="btn btn-warning">Edit</a>

                    <button class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#deleteModal-@job.OfferId">Delete</button>

                    <a asp-action="ViewApplications" asp-route-jobId="@job.OfferId" class="btn btn-info">View Applications</a>

                    <!-- Delete Confirmation Modal -->
                    <div class="modal fade" id="deleteModal-@job.OfferId" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title">Confirm Deletion</h5>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                </div>
                                <div class="modal-body">
                                    Are you sure you want to delete the job: <strong>@job.Title</strong>?
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                    <a asp-action="DeleteJob" asp-route-id="@job.OfferId" class="btn btn-danger">Delete</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Pagination Controls -->
<nav aria-label="Page navigation">
    <ul class="pagination justify-content-center">
        <!-- Previous Button -->
        <li class="page-item @(Model.HasPreviousPage ? "" : "disabled")">
            <a class="page-link" href="@Url.Action("ManageJobs", new { page = Model.PageNumber - 1 })" tabindex="-1">Previous</a>
        </li>

        <!-- Page Numbers (show limited pages for better UX) -->
        @for (int i = Math.Max(1, Model.PageNumber - 2); i <= Math.Min(Model.PageCount, Model.PageNumber + 2); i++)
        {
            <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                <a class="page-link" href="@Url.Action("ManageJobs", new { search = ViewBag.SearchQuery, page = i })">@i</a>
            </li>
        }

        <!-- Next Button -->
        <li class="page-item @(Model.HasNextPage ? "" : "disabled")">
            <a class="page-link" href="@Url.Action("ManageJobs", new { page = Model.PageNumber + 1 })">Next</a>
        </li>
    </ul>
</nav>


<script>
    //Automatically hide success message after 5 seconds and remove the space
    setTimeout(function () {
        var successAlert = document.querySelector('.alert-success');
        if (successAlert) {
            successAlert.classList.add('fade');
            successAlert.classList.remove('show');
            // Hide the alert completely after fading out
            successAlert.style.display = 'none';
        }
    }, 5000); // 5000 ms = 5 seconds

    // Close success message when user clicks the close button and remove space
    var closeButtons = document.querySelectorAll('.alert .close');
    closeButtons.forEach(function (button) {
        button.addEventListener('click', function () {
            var alert = this.closest('.alert');
            alert.classList.add('fade');
            alert.classList.remove('show');
            // Hide the alert completely after clicking close button
            alert.style.display = 'none';
        });
    });
</script>
