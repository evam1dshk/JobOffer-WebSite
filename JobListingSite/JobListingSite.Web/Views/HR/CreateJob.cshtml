@model JobListingSite.Data.Entities.Offer

<h2>Add Job</h2>

<form asp-action="CreateJob" method="post">
    <div class="mb-3">
        <label asp-for="Title" class="form-label">Job Title</label>
        <input asp-for="Title" class="form-control" required />
    </div>

    <div class="mb-3">
        <label asp-for="Description" class="form-label">Description</label>
        <textarea asp-for="Description" class="form-control"></textarea>
    </div>

    <div class="mb-3">
        <label asp-for="Salary" class="form-label">Salary</label>
        <input asp-for="Salary" class="form-control" type="number" step="0.01" />
    </div>

    <div class="mb-3">
        <label asp-for="CategoryId" class="form-label">Category</label>

        @if (ViewBag.Categories == null || !((IEnumerable<SelectListItem>)ViewBag.Categories).Any())
        {
            <p class="text-danger">No categories available. Please add categories first.</p>
        }
        else
        {
            <select asp-for="CategoryId" asp-items="ViewBag.Categories" class="form-control">
                <option value="">Select a category</option>
            </select>
        }
    </div>

    <button type="submit" class="btn btn-success">Create Job</button>
    <a asp-action="ManageJobs" class="btn btn-secondary">Cancel</a>
</form>
