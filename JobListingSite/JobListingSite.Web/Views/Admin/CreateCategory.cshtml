@model JobListingSite.Data.Entities.Category

@{
    ViewData["Title"] = "Create Category";
    Layout = "_Layout";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />

<style>
    body {
        background: linear-gradient(135deg, #43cea2, #185a9d);
        font-family: 'Segoe UI', sans-serif;
    }

    .create-card {
        background-color: #ffffff;
        border-radius: 24px;
        box-shadow: 0 10px 30px rgba(24, 90, 157, 0.3);
        padding: 3rem;
        max-width: 600px;
        width: 100%;
        margin: auto;
        margin-top: 3rem;
        animation: fadeInUp 0.6s ease;
    }

    h2 {
        font-weight: 700;
        color: #212529;
        text-align: center;
        margin-bottom: 2.5rem;
    }

    .form-control {
        border-radius: 12px;
        border: 1px solid #ccc;
        padding: 12px;
        font-size: 1.1rem;
        background-color: #f8f9fa;
        transition: 0.3s ease;
    }

    .form-control:focus {
        border-color: #43cea2;
        box-shadow: 0 0 8px rgba(67, 206, 162, 0.6);
    }

    label {
        font-weight: 600;
        margin-bottom: 0.5rem;
        color: #185a9d;
    }

    .btn-black-ombre {
        background: linear-gradient(to right, #434343, #000000);
        border: none;
        color: white;
        font-weight: 500;
        border-radius: 8px;
        padding: 10px 24px;
        transition: all 0.3s ease;
    }

    .btn-black-ombre:hover {
        color: #43cea2;
        box-shadow: 0 0 15px rgba(24, 90, 157, 0.7);
        transform: translateY(-3px);
    }

    .btn-black-ombre:active {
        transform: translateY(1px);
    }

    .btn-green-ombre {
        background: linear-gradient(to right, #43cea2, #185a9d);
        border: none;
        color: white;
        font-weight: 500;
        border-radius: 8px;
        padding: 10px 24px;
        transition: all 0.3s ease;
    }

    .btn-green-ombre:hover {
        box-shadow: 0 0 15px rgba(67, 206, 162, 0.6);
        transform: translateY(-3px);
    }

    .btn-green-ombre:active {
        transform: translateY(1px);
    }

    .button-row {
        display: flex;
        justify-content: center;
        gap: 15px;
        margin-top: 2rem;
        flex-wrap: wrap;
    }

    @@keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(25px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
</style>

<div class="create-card">
    <h2><i class="fas fa-plus-circle me-2"></i> Create New Category</h2>

    <form asp-action="CreateCategory" method="post">
        @Html.AntiForgeryToken()

        <div class="mb-3">
            <label asp-for="Name" class="form-label"><i class="fas fa-tag me-1"></i> Category Name</label>
            <input asp-for="Name" class="form-control" placeholder="Enter category name..." />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="button-row">
            <button type="submit" class="btn btn-green-ombre">
                <i class="fas fa-save me-2"></i> Save
            </button>
            <a asp-action="ManageCategories" class="btn btn-black-ombre">
                <i class="fas fa-arrow-left me-2"></i> Back
            </a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
