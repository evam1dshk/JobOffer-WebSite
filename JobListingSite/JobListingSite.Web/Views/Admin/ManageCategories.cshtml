@model List<JobListingSite.Data.Entities.Category>

@{
    ViewData["Title"] = "Manage Categories";
    Layout = "_Layout";
}

<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-success">Manage Categories</h2>
        <a asp-action="AddCategory" class="btn btn-success">
            <i class="fas fa-plus-circle me-1"></i> Add New Category
        </a>
    </div>

    <table class="table table-hover shadow-sm">
        <thead class="table-success">
            <tr>
                <th>#</th>
                <th>Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var category in Model)
            {
                <tr>
                    <td>@category.CategoryId</td>
                    <td>@category.Name</td>
                    <td>
                        <a asp-action="EditCategory" asp-route-id="@category.CategoryId" class="btn btn-outline-success btn-sm">
                            <i class="fas fa-edit"></i>
                        </a>
                        <button class="btn btn-outline-danger btn-sm" onclick="confirmDelete(@category.CategoryId)">
                            <i class="fas fa-trash"></i>
                        </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<script>
    function confirmDelete(id) {
        Swal.fire({
            title: 'Delete Category?',
            text: 'This action cannot be undone.',
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#28a745',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Yes, delete it!'
        }).then((result) => {
            if (result.isConfirmed) {
                window.location.href = '/Admin/DeleteCategory/' + id;
            }
        });
    }
</script>
