@model X.PagedList.IPagedList<JobListingSite.Data.Entities.Offer>
@using X.PagedList.Mvc.Core

@{
    ViewData["Title"] = "Manage Job Offers";
    Layout = "_Layout";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />

<style>
    body {
        background: linear-gradient(135deg, #43cea2, #185a9d);
        font-family: 'Segoe UI', sans-serif;
    }

    .manage-card {
        background: #fff;
        border-radius: 24px;
        box-shadow: 0 10px 30px rgba(24, 90, 157, 0.3);
        padding: 3rem;
        max-width: 1100px;
        margin: 4rem auto;
        animation: fadeInUp 0.6s ease;
    }

    h2 {
        font-weight: 700;
        color: #212529;
        text-align: center;
        margin-bottom: 2.5rem;
    }

    table {
        width: 100%;
        margin-top: 2rem;
        background-color: #f8f9fa;
        border-radius: 20px;
        overflow: hidden;
    }

    th, td {
        text-align: center;
        vertical-align: middle;
        padding: 1rem;
        font-size: 1rem;
    }

    th {
        background-color: #e9ecef;
        font-weight: bold;
        color: #343a40;
    }

    tbody tr {
        transition: all 0.3s ease;
    }

        tbody tr:hover {
            background-color: #dee2e6;
            transform: scale(1.02);
            box-shadow: 0 8px 20px rgba(24, 90, 157, 0.2);
        }

    .btn-gradient {
        background: linear-gradient(to right, #28a745, #43cea2);
        color: white;
        border: none;
        padding: 8px 20px;
        border-radius: 8px;
        font-weight: 600;
        font-size: 0.9rem;
        transition: all 0.3s ease;
    }

        .btn-gradient:hover {
            background: linear-gradient(to right, #43cea2, #28a745);
            box-shadow: 0 0 12px rgba(67, 206, 162, 0.5);
            transform: translateY(-2px);
        }

    .pagination {
        display: flex;
        justify-content: center;
        margin-top: 2rem;
        list-style: none;
    }

        .pagination li a, .pagination li span {
            color: white;
            background: linear-gradient(to right, #434343, #000000);
            padding: 10px 18px;
            margin: 0 5px;
            border-radius: 8px;
            text-decoration: none;
            font-weight: 600;
            transition: 0.3s;
        }

            .pagination .active span,
            .pagination li a:hover {
                background: linear-gradient(to right, #43cea2, #185a9d);
                box-shadow: 0 0 12px rgba(67, 206, 162, 0.6);
            }

    @@keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(30px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
</style>

<div class="manage-card">
    <h2><i class="fas fa-briefcase me-2"></i> Manage Job Offers</h2>

    <div class="text-end mb-3">
        <a asp-action="Dashboard" asp-controller="Admin" class="btn btn-gradient">
            <i class="fas fa-arrow-left me-1"></i> Back to Dashboard
        </a>
    </div>

    <table class="table table-hover">
        <thead>
            <tr>
                <th>Title</th>
                <th>Company</th>
                <th>Category</th>
                <th>Posted On</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var offer in Model)
            {
                <tr>
                    <td>@offer.Title</td>
                    <td>@offer.Company?.CompanyProfile?.CompanyName ?? "Unknown"</td>
                    <td>@offer.Category?.Name ?? "Uncategorized"</td>
                    <td>@offer.CreatedAt.ToShortDateString()</td>
                    <td>
                        <a asp-controller="Job" asp-action="Details" asp-route-id="@offer.OfferId" class="btn btn-gradient btn-sm">
                            <i class="fas fa-eye me-1"></i> View
                        </a>
                        <a asp-action="EditOffer" asp-route-id="@offer.OfferId" class="btn btn-ombre-green btn-sm">
                            <i class="fas fa-edit"></i> Edit
                        </a>

                    </td>
                </tr>
            }
        </tbody>

    </table>

    <div class="d-flex justify-content-center mt-4">
        @Html.PagedListPager(Model, page => Url.Action("ViewOffers", new { page }),
        new PagedListRenderOptions
        {
        Display = PagedListDisplayMode.IfNeeded,
        UlElementClasses = new[] { "pagination", "justify-content-center" },
        LiElementClasses = new[] { "page-item" },
        PageClasses = new[] { "page-link" },
        MaximumPageNumbersToDisplay = 5
        })
    </div>
</div>
