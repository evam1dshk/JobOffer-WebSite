@{
    ViewData["Title"] = "Welcome";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />

<style>
    body {
        background: linear-gradient(to bottom right, #43cea2, #185a9d);
        color: #fff;
        font-family: 'Segoe UI', sans-serif;
    }

    .hero {
        padding: 100px 0;
        text-align: center;
        animation: fadeIn 0.6s ease;
    }

    .hero h1 {
        font-size: 3rem;
        font-weight: 700;
    }

    .hero p {
        font-size: 1.2rem;
        margin-top: 10px;
        color: #e2f6f0;
    }

    .btn-green {
        background: #28a745;
        border: none;
        color: white;
        padding: 10px 25px;
        font-size: 1.1rem;
        border-radius: 50px;
        transition: background 0.3s ease;
    }

    .btn-green:hover {
        background: #218838;
    }

    .search-bar {
        max-width: 600px;
        margin: 20px auto;
        padding: 10px;
        background: white;
        border-radius: 50px;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
        display: flex;
    }

    .search-bar input {
        border: none;
        border-radius: 50px 0 0 50px;
        padding: 10px 20px;
        width: 100%;
        outline: none;
    }

    .search-bar button {
        border: none;
        border-radius: 0 50px 50px 0;
        padding: 0 20px;
        background: #28a745;
        color: white;
    }

    .featured-jobs {
        padding: 60px 0;
        background-color: rgba(255, 255, 255, 0.1);
    }

    .job-card {
        background-color: white;
        color: #333;
        padding: 20px;
        border-radius: 10px;
        transition: transform 0.3s ease;
        box-shadow: 0 5px 15px rgba(0,0,0,0.1);
    }

    .job-card:hover {
        transform: translateY(-5px);
    }

    @@keyframes fadeIn {
        from { opacity: 0; transform: translateY(30px); }
        to { opacity: 1; transform: translateY(0); }
    }
</style>

<div class="hero">
    <h1>🚀 Find Your Dream Job</h1>
    <p>Explore thousands of job offers from top companies in tech, marketing, and more.</p>

    <div class="search-bar mt-4">
        <input type="text" placeholder="Search by title, category..." />
        <button><i class="fas fa-search"></i></button>
    </div>

    <a asp-controller="Job" asp-action="Browse" class="btn btn-green mt-3">
        <i class="fas fa-briefcase"></i> Browse Jobs
    </a>
</div>

<!-- 🧩 Featured Job Listings -->
<div class="featured-jobs container text-dark">
    <h2 class="text-center mb-5">🔥 Featured Jobs</h2>
    <div class="row g-4">
        <div class="col-md-4">
            <div class="job-card">
                <h5><i class="fas fa-laptop-code me-2 text-primary"></i>Frontend Developer</h5>
                <p>Join a cutting-edge startup building the next big thing.</p>
                <a class="btn btn-sm btn-outline-primary" href="#">Apply Now</a>
            </div>
        </div>
        <div class="col-md-4">
            <div class="job-card">
                <h5><i class="fas fa-chart-line me-2 text-success"></i>Marketing Specialist</h5>
                <p>Help grow brands with data-driven campaigns and innovation.</p>
                <a class="btn btn-sm btn-outline-success" href="#">Apply Now</a>
            </div>
        </div>
        <div class="col-md-4">
            <div class="job-card">
                <h5><i class="fas fa-database me-2 text-warning"></i>Data Analyst</h5>
                <p>Analyze key metrics and support strategic decisions with insights.</p>
                <a class="btn btn-sm btn-outline-warning" href="#">Apply Now</a>
            </div>
        </div>
    </div>
</div>
