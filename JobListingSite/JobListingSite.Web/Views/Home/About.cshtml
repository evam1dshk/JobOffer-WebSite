@{
    ViewData["Title"] = "About Us";
}

<section class="py-5 text-white" style="background: linear-gradient(135deg, #43cea2, #185a9d, #ffffff);">
    <div class="container text-center">
        <h1 class="fw-bold mb-3">About JobListingSite</h1>
        <p class="lead">Empowering talents and companies to connect, grow, and succeed together.</p>
    </div>
</section>

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-lg-10 text-center">
            <h2 class="fw-bold mb-4">Our Mission 🚀</h2>
            <p class="mb-5">
                At JobListingSite, our mission is to simplify the hiring and job-seeking process.
                We believe finding the perfect job or candidate should be easy, intuitive, and inspiring.
            </p>

            <div class="row g-4">
                <div class="col-6 col-md-3">
                    <div class="card h-100 shadow-sm border-0">
                        <div class="card-body">
                            <i class="fas fa-bolt fa-2x text-success mb-3"></i>
                            <h5 class="card-title fw-bold">Fast & Simple</h5>
                            <p class="card-text small">Quick and intuitive experience.</p>
                        </div>
                    </div>
                </div>

                <div class="col-6 col-md-3">
                    <div class="card h-100 shadow-sm border-0">
                        <div class="card-body">
                            <i class="fas fa-briefcase fa-2x text-primary mb-3"></i>
                            <h5 class="card-title fw-bold">Curated Jobs</h5>
                            <p class="card-text small">Top offers from trusted companies.</p>
                        </div>
                    </div>
                </div>

                <div class="col-6 col-md-3">
                    <div class="card h-100 shadow-sm border-0">
                        <div class="card-body">
                            <i class="fas fa-users fa-2x text-warning mb-3"></i>
                            <h5 class="card-title fw-bold">Community</h5>
                            <p class="card-text small">Building strong professional networks.</p>
                        </div>
                    </div>
                </div>

                <div class="col-6 col-md-3">
                    <div class="card h-100 shadow-sm border-0">
                        <div class="card-body">
                            <i class="fas fa-lock fa-2x text-danger mb-3"></i>
                            <h5 class="card-title fw-bold">Secure</h5>
                            <p class="card-text small">Protecting your data and privacy.</p>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
}
