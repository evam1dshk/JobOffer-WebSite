@model IEnumerable<JobListingSite.Data.Entities.Offer>

@{
    ViewData["Title"] = "Job Listings";
}

<h2>Available Jobs</h2>

<div class="row">
    @foreach (var job in Model)
    {
        <div class="col-md-6 mb-4">
            <div class="card h-100">
                <div class="card-body">
                    <h5 class="card-title">@job.Title</h5>
                    <h6 class="card-subtitle mb-2 text-muted">@job.Category?.Name</h6>
                    <p class="card-text">@job.Description?.Substring(0, Math.Min(100, job.Description.Length))...</p>
                    <a asp-action="Details" asp-route-id="@job.OfferId" class="btn btn-primary">View Details</a>
                    <a asp-controller="Job" asp-action="Browse" class="btn btn-success">
                        <i class="fas fa-search"></i> Browse Jobs
                    </a>
                </div>
            </div>
        </div>
    }
</div>
