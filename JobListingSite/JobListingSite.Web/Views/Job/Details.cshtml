@model JobListingSite.Data.Entities.Offer

@{
    ViewData["Title"] = "Job Details";
}

<h2>@Model.Title</h2>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}
@if (TempData["WarningMessage"] != null)
{
    <div class="alert alert-warning">@TempData["WarningMessage"]</div>
}

<div class="mb-3">
    <strong>Category:</strong> @Model.Category?.Name
</div>
<div class="mb-3">
    <strong>Description:</strong>
    <p>@Model.Description</p>
</div>
<div class="mb-3">
    <strong>Salary:</strong> $@Model.Salary.ToString("F2")
</div>

@if (User.Identity.IsAuthenticated && !User.IsInRole("HR") && !User.IsInRole("Admin"))
{
    <form asp-controller="Job" asp-action="Apply" method="post">
        <input type="hidden" name="offerId" value="@Model.OfferId" />
        <button type="submit" class="btn btn-success">Apply</button>
    </form>
}
else if (!User.Identity.IsAuthenticated)
{
    <p class="text-muted">Please <a asp-area="Identity" asp-page="/Account/Login">login</a> to apply.</p>
}
