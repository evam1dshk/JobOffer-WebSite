@page
@model ForgotPasswordConfirmation
@{
    ViewData["Title"] = "Reset Link Sent";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Password Reset Sent</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
    <style>
        body {
            background: linear-gradient(135deg, #43cea2, #185a9d);
            font-family: 'Segoe UI', sans-serif;
            color: white;
            text-align: center;
            display: flex;
            align-items: center;
            justify-content: center;
            min-height: 100vh;
        }

        .message-box {
            background: white;
            color: #185a9d;
            padding: 2.5rem;
            border-radius: 20px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.2);
            max-width: 500px;
        }

        .btn-login {
            margin-top: 1rem;
            background: linear-gradient(to right, #43cea2, #28a745);
            color: white;
            padding: 10px 24px;
            border: none;
            border-radius: 8px;
        }

            .btn-login:hover {
                background: linear-gradient(to right, #28a745, #43cea2);
            }
    </style>
</head>
<body>
    <div class="message-box">
        <h1 class="display-6">📩 Reset Link Sent</h1>
        <p>Please check your email to reset your password.</p>
        <a asp-page="./Login" class="btn btn-login">Back to Login</a>
    </div>
</body>
</html>
