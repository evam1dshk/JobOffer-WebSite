@page
@model ConfirmEmailModel
@{
    ViewData["Title"] = "Email Confirmed";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Email Confirmed</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
    <style>
        body {
            background: linear-gradient(135deg, #43cea2, #185a9d);
            font-family: 'Segoe UI', sans-serif;
            color: white;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            text-align: center;
        }

        .message-box {
            background: white;
            color: #185a9d;
            padding: 2.5rem;
            border-radius: 20px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.2);
        }

        .btn-login {
            margin-top: 1rem;
            background: linear-gradient(to right, #43cea2, #28a745);
            color: white;
            padding: 10px 24px;
            border: none;
            border-radius: 8px;
        }

        .btn-login:hover {
            background: linear-gradient(to right, #28a745, #43cea2);
        }
    </style>
</head>
<body>
    <div class="message-box">
        <h1 class="display-5">🎉 Email Confirmed</h1>
        <p>Your account has been successfully confirmed.</p>
        <a asp-page="./Login" class="btn btn-login">Go to Login</a>
    </div>
</body>
</html>
