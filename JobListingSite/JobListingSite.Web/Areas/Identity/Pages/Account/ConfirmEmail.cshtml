@page
@model ConfirmEmailModel
@{
    ViewData["Title"] = "Email Confirmed";
}

<div class="container d-flex justify-content-center align-items-center" style="min-height: 100vh; background: linear-gradient(135deg, #43cea2, #185a9d);">
    <div class="text-center text-white">
        <h1 class="display-4 mb-3">🎉 Email Confirmed</h1>
