@page
@model DeletePersonalDataModel
@{
    ViewData["Title"] = "Delete Account";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />

<div class="container mt-5">
    <div class="card shadow p-4">
        <h3 class="text-danger mb-4"><i class="fas fa-user-times me-2"></i>Delete Account</h3>
        <p class="text-danger fw-semibold">Warning: This action is irreversible!</p>

        <form method="post">
            @if (Model.RequirePassword)
            {
                <div class="form-floating mb-3">
                    <input asp-for="Input.Password" class="form-control" type="password" />
                    <label asp-for="Input.Password">Confirm your password</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
            }

            <button class="btn btn-danger w-100"><i class="fas fa-trash me-2"></i> Confirm Deletion</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
