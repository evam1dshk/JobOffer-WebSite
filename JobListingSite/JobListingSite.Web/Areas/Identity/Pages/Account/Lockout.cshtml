@page
@model LockoutModel
@{
    ViewData["Title"] = "Account Locked Out";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - JobListingSite</title>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/animate.css@4/animate.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            background: linear-gradient(to bottom right, #43cea2, #185a9d);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            font-family: 'Segoe UI', sans-serif;
            color: #fff;
        }

        .lockout-card {
            background: #ffffff;
            padding: 3rem;
            border-radius: 20px;
            box-shadow: 0 0 25px rgba(24, 90, 157, 0.6);
            max-width: 450px;
            width: 100%;
            text-align: center;
            animation: fadeInUp 0.8s ease;
        }

            .lockout-card h1 {
                font-size: 2rem;
                font-weight: 700;
                color: #185a9d;
            }

            .lockout-card p {
                color: #333;
                margin-top: 1rem;
                font-size: 1.1rem;
            }

        .btn-home {
            margin-top: 2rem;
            background: linear-gradient(to right, #43cea2, #185a9d);
            color: #fff;
            padding: 10px 25px;
            border: none;
            border-radius: 12px;
            font-weight: 600;
            transition: 0.3s;
        }

            .btn-home:hover {
                background: linear-gradient(to right, #185a9d, #43cea2);
                transform: scale(1.05);
                color: #fff;
                box-shadow: 0 0 15px rgba(24, 90, 157, 0.7);
            }

        @@keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(30px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }
    </style>
</head>
<body>

    <div class="lockout-card animate__animated animate__fadeIn">
        <i class="fas fa-lock fa-3x mb-4 text-success"></i>
        <h1>Account Locked</h1>
        <p>Your account has been temporarily locked due to too many failed login attempts. <br /> Please try again later.</p>

        <a href="/" class="btn btn-home mt-3">
            <i class="fas fa-home"></i> Back to Home
        </a>
    </div>

</body>
</html>
